{
  "manifest_version": 3,
  "name": "AutoWifi Login",
  "version": "1.0",
  "description": "Automatically logs into captive portal Wi-Fi networks.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "WiFi Login Settings",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://172.16.2.1/*", "*://*/fgtauth*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}